<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="30sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calculator_button_C"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="#ffa500"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="C"/>

            <Button
                android:id="@+id/calculator_button_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="#ffa500"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="删除" />

            <Button
                android:id="@+id/calculator_button_baifen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="#ffa500"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="%" />

            <Button
                android:id="@+id/calculator_button_chu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="#ffa500"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calculator_button_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/calculator_button_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/calculator_button_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="9" />

            <Button
                android:id="@+id/calculator_button_cheng"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="#ffa500"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calculator_button_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/calculator_button_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/calculator_button_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:id="@+id/calculator_button_jian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="#ffa500"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calculator_button_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/calculator_button_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/calculator_button_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="3" />

            <Button
                android:id="@+id/calculator_button_jia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="#ffa500"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calculator_button_dian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="." />

            <Button
                android:id="@+id/calculator_button_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/calculator_button_deng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ffa500"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_weight="2"
                android:text="=" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>